<script>
    // Scroll chatBox to bottom when page is loaded
    window.addEventListener('DOMContentLoaded', (event) => {
        const chatBox = document.getElementById('chatBox');
        if (chatBox) {
            chatBox.scrollTop = chatBox.scrollHeight;
        }
    });
</script>
