@{
    Layout = "~/Views/Shared/ChatLayout.cshtml";
}
@model List<ApplicationUser>
@section UserList{
    <ul class="list-group">
        @foreach(var user in Model)
        {
            <li class="list-group-item ">
                <a asp-action="StartChat" asp-route-userId="@user.Id">@user.UserName</a>
            </li>
        }   


    </ul>

}
<h2 class="text-center text-muted">Chọn một người để bắt đầu trò chuyện</h2>

